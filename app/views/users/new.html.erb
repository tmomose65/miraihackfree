<h1>会員情報入力</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :nickname, "ニックネーム" %>
      <%= f.text_field :nickname %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワードの確認" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :applicant_branch_no, "振込元支店名" %>
      <%= f.text_field :applicant_branch_no %>
      
      <%= f.label :applicant_account_no, "振込元口座番号" %>
      <%= f.text_field :applicant_account_no %>

      <%= f.submit "会員登録する", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>